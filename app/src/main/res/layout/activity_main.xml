<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.bhd.facilitiesmaintain.viewmodel.state.MainViewModel" />

        <variable
            name="click"
            type="com.bhd.facilitiesmaintain.ui.activity.MainActivity.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:text="设备维护系统"
                android:textColor="#333333"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F2F2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="欢迎：李先生"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_20" />

                <Button
                    android:id="@+id/btn_signout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{()-> click.signout()}"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:background="@drawable/shape_signout_btn"
                    android:text="退出账号"
                    android:textColor="#F63C56"
                    android:textSize="@dimen/dp_16" />
            </RelativeLayout>

            <TextView
                android:id="@+id/prompt_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:text="@{viewmodel.setPrompt_message}"
                tools:text="您有2条故障信息需处理，详情请戳“工单查询”按钮"
                android:textColor="#F63C56" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_64"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <Button
                    android:id="@+id/btn_xxgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/but_xxgl" />

                <Button
                    android:id="@+id/btn_sblb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@mipmap/btn_sblb" />

                <Button
                    android:id="@+id/btn_gdcx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_xxgl"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@mipmap/btn_gdcx" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_sblb"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@mipmap/btn_bxlr" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_gdcx"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@mipmap/btn_whby" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>